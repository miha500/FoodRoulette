<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>User.Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.title %></td>
